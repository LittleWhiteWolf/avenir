<div class="index-template">
    <div class="index-template-left post-title-list">
        <ul class="post-archive">
            <% var last = 1997 %>
            <% page.posts.each(function (post) { %>
                <% if (last != post.date.year()){ %>
                    <span class="year"> <a><%=post.date.year()%></a></span>
                    <% last = post.date.year()%>
                <%}%>
                <li class="post-item">
                    <span class="date"><%= date(post.date, "MM-DD") %></span>
                    <a class="title" href="<%- url_for(post.path) %>"><%= post.title %></a>
                </li>
            <% }) %>
        </ul>
        <%- partial('_partial/paginator') %>
    </div>
    <div class="index-template-right">
        <div class="index-template-right-widget all-categories">
            <div class="index-template-right-widget-bar"><i class="fa fa-folder-open-o"></i> Categories</div>
            <%- list_categories() %>
        </div>
        <div class="index-template-right-widget tags-cloud">
            <div class="index-template-right-widget-bar"><i class="fa fa-tags"></i> Tags</div>
            <div class="tags-cloud-wrapper"><%- tagcloud() %></div>
        </div>
    </div>
</div>