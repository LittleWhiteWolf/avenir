body {
	padding 0
	margin 0
	width 100%
	height 100%
	color #c9cacc
	background-color #1d1f21
	a {
		color #c9cacc
		text-decoration none
	}
	a.post-title-link{
		color #c6e48b
	}

	// 补充的markdown样式
	blockquote {
		margin-left 0
		padding 0
		padding-left 1em
		background-color #33435155
		border 1px solid #232b3355
		border-left 3px solid #4877a4
		line-height 2rem
	}
}

.main {
	width 65%
	max-width 1024px
	min-width 768px
	margin 0 auto

	.content-wrapper{
		margin 12px 0
	}
}

@import "_partial/copyright"
@import "_partial/navigator"
@import "_partial/index"
@import "_partial/archive"
@import "_partial/paginator"
@import "_partial/post"
